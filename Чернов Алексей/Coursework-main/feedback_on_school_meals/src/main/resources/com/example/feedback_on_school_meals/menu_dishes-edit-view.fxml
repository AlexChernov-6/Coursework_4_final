<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.feedback_on_school_meals.controller.MenuDishesEditViewController"
      spacing="10" prefWidth="400" prefHeight="400">

    <!-- Добавьте padding правильно: -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="Меню ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="menuIdTF" promptText="Выберите меню"
                  prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Блюдо:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="dishCB" promptText="Выберите блюдо"
                  prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="BOTTOM_CENTER">
        <Button fx:id="saveBtn" text="Сохранить" onAction="#onSaveBtn"/>
        <Button fx:id="cancelBtn" text="Отмена" onAction="#onCancelBtn"/>
    </HBox>

</VBox>