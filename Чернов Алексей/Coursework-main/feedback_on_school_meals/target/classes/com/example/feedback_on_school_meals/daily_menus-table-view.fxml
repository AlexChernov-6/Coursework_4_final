<?xml version="1.0" encoding="UTF-8"?><?import javafx.scene.control.*?><?import javafx.scene.layout.*?><?import javafx.geometry.Insets?><?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.feedback_on_school_meals.controller.DailyMenusTableViewController">
    <MenuBar prefHeight="25" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets left="10" right="10"/>
        </padding>
        <menus>
            <Menu mnemonicParsing="false" text="Навигация">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemDailyMenusAction" text="Ежедневное меню"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemDishesAction" text="Блюда"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemMenuDishesAction" text="Меню и блюда"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemFeedbackAction" text="Отзывы"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemComplaintsAction" text="Жалобы"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <HBox AnchorPane.topAnchor="35" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" prefHeight="25">
        <Button fx:id="addBtn" text="Добавить" onAction="#onAddBtn">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>
        <Button text="Изменить" onAction="#onUpdateBtn">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>
        <Button text="Удалить" onAction="#onDeleteBtn">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>
    </HBox>
    <TableView fx:id="tableViewDailyMenus" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
               AnchorPane.topAnchor="70" AnchorPane.bottomAnchor="10" fixedCellSize="50">
        <columns>
            <TableColumn fx:id="tableColumnDailyMenuId" prefWidth="45" text="№"/>
            <TableColumn fx:id="tableColumnDailyMenuDate" prefWidth="120" text="Дата меню"/>
            <TableColumn fx:id="tableColumnApprovedBy" prefWidth="120" text="Кем одобрено"/>
        </columns>
    </TableView>
</AnchorPane>