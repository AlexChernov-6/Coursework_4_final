<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane fx:controller="com.example.feedback_on_school_meals.controller.FeedbackEditViewController"
          xmlns:fx="http://javafx.com/fxml" prefHeight="400" prefWidth="400">
    <columnConstraints>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="70"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <Label text="Блюдо" GridPane.halignment="RIGHT">
        <GridPane.margin>
            <Insets right="5" top="10" bottom="10"/>
        </GridPane.margin>
    </Label>
    <ComboBox fx:id="dishesCB" promptText="Выберите блюдо" GridPane.columnIndex="1" prefWidth="250">
        <GridPane.margin>
            <Insets left="5" top="10" bottom="10"/>
        </GridPane.margin>
    </ComboBox>

    <Label text="Оценка" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
        <GridPane.margin>
            <Insets right="5" top="10" bottom="10"/>
        </GridPane.margin>
    </Label>
    <ComboBox fx:id="ratingCB" promptText="Оцените блюдо" GridPane.columnIndex="1" GridPane.rowIndex="1"
              prefWidth="250">
        <GridPane.margin>
            <Insets left="5" top="10" bottom="10"/>
        </GridPane.margin>
    </ComboBox>

    <Label text="Комментарий" GridPane.halignment="RIGHT" GridPane.rowIndex="2" GridPane.valignment="TOP">
        <GridPane.margin>
            <Insets right="5" top="10" bottom="10"/>
        </GridPane.margin>
    </Label>
    <TextArea fx:id="commentTA" promptText="Введите комментарий" GridPane.columnIndex="1" GridPane.rowIndex="2"
              prefWidth="250" maxWidth="250">
        <GridPane.margin>
            <Insets left="5" top="10" bottom="10"/>
        </GridPane.margin>
    </TextArea>

    <Label text="Класс ученика" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
        <GridPane.margin>
            <Insets right="5" top="10" bottom="10"/>
        </GridPane.margin>
    </Label>
    <ComboBox fx:id="classCB" promptText="Выберите класс" GridPane.columnIndex="1" GridPane.rowIndex="3"
              prefWidth="250">
        <GridPane.margin>
            <Insets left="5" top="10" bottom="10"/>
        </GridPane.margin>
    </ComboBox>

    <Label text="Анонимно?" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
        <GridPane.margin>
            <Insets right="5" top="10" bottom="10"/>
        </GridPane.margin>
    </Label>
    <CheckBox fx:id="anonymousCB" GridPane.columnIndex="1" GridPane.rowIndex="4"
              prefWidth="250">
        <GridPane.margin>
            <Insets left="5" top="10" bottom="10"/>
        </GridPane.margin>
    </CheckBox>

    <HBox GridPane.rowIndex="5" alignment="BOTTOM_CENTER" GridPane.columnSpan="2">
        <Button fx:id="saveBtn" onAction="#onSaveBtn">
            <HBox.margin>
                <Insets bottom="10" right="10"/>
            </HBox.margin>
        </Button>

        <Button fx:id="cancelBtn" text="Отмена" onAction="#onCancelBtn">
            <HBox.margin>
                <Insets bottom="10" left="10"/>
            </HBox.margin>
        </Button>
    </HBox>

</GridPane>