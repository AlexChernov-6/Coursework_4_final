<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.feedback_on_school_meals.controller.FeedbackTableViewController">

    <MenuBar prefHeight="25" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets left="10" right="10"/>
        </padding>
        <menus>
            <Menu mnemonicParsing="false" text="Навигация">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemDailyMenusAction" text="Ежедневное меню"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemDishesAction" text="Блюда"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemMenuDishesAction" text="Меню и блюда"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemFeedbackAction" text="Отзывы"/>
                    <MenuItem mnemonicParsing="false" onAction="#MenuItemComplaintsAction" text="Жалобы"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <HBox AnchorPane.topAnchor="35" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" prefHeight="25">

        <Button text="Добавить" onAction="#onAddBtn">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>

        <Button text="Изменить" onAction="#onUpdateBtn">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>

        <Button text="Удалить" onAction="#onDeleteBtn">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>

        <Button fx:id="reportsBtn" text="Отчёты" onAction="#onReportsBtn">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>

        <TextField fx:id="serchTF" promptText="Поиск по значению" onAction="#filterData">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </TextField>
    </HBox>

    <TableView fx:id="tableViewFeedback" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
               AnchorPane.topAnchor="70" AnchorPane.bottomAnchor="30">
        <columns>
            <TableColumn fx:id="tableColumnID" maxWidth="50" minWidth="40" prefWidth="45" text="№"/>
            <TableColumn fx:id="tableColumnDish" minWidth="100" prefWidth="120" maxWidth="140" text="Блюдо"/>
            <TableColumn fx:id="tableColumnRating" maxWidth="70" minWidth="50" prefWidth="60" text="Оценка"/>
            <TableColumn fx:id="tableColumnComment" minWidth="100" prefWidth="300" text="Комментарий"/>
            <TableColumn fx:id="tableColumnDate" minWidth="100" prefWidth="120" maxWidth="140" text="Дата"/>
            <TableColumn fx:id="tableColumnClass" minWidth="80" prefWidth="100" maxWidth="120" text="Класс ученика"/>
        </columns>
    </TableView>

    <Label text="Показано записей" fx:id="countRows" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
           prefHeight="25" AnchorPane.bottomAnchor="5"/>
</AnchorPane>